<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | Fullstack (Web) Software Engineer, based in India</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="canonical" href="{{ metadata.url + page.url | url }}" />

    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or title or metadata.description }}">
    <meta property="og:image" content="{{ metadata.url }}{{ cover or metadata.cover }}"/>
    <meta property="og:image:height" content="675" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:type" content="article">

    <meta name="twitter:title" content="{{ title or metadata.title }}">
    <meta name="twitter:description" content="{{ desc or title or metadata.description }}">
    <meta name="twitter:image" content="{{ cover or metadata.cover }}">
    <meta name="twitter:creator" content="{{ metadata.author.twitter }}">
    <meta name="twitter:site" content="{{ metadata.author.twitter }}">
    <meta name="twitter:card" content="summary_large_image">

    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% if isHighlight %}
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    {% endif %}
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    {{ content | safe }}
  </body>
</html>
