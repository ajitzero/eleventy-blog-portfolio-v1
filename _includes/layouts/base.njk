<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} | @ajitzero</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="canonical" href="{{ metadata.url + page.url | url }}" />

    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or title or metadata.description }}">
    <meta property="og:image" content="{{ metadata.url }}{{ cover or metadata.cover }}"/>
    <meta property="og:image:height" content="675" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:type" content="article">

    <meta name="twitter:title" content="{{ title or metadata.title }}">
    <meta name="twitter:description" content="{{ desc or title or metadata.description }}">
    <meta name="twitter:image" content="{{ cover or metadata.cover }}">
    <meta name="twitter:creator" content="@{{ metadata.author.twitter }}">
    <meta name="twitter:site" content="@{{ metadata.author.twitter }}">
    <meta name="twitter:card" content="summary_large_image">

    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/img/favicon/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/img/favicon/favicon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/img/favicon/favicon-16x16.png' | url }}">
    <link rel="manifest" href="{{ '/img/favicon/site.webmanifest' | url }}">
    <link rel="mask-icon" href="{{ '/img/favicon/safari-pinned-tab.svg' | url }}" color="{{ metadata.theme.color }}">
    <link rel="shortcut icon" href="{{ '/img/favicon/favicon.ico' | url }}">
    <meta name="msapplication-TileColor" content="{{ metadata.theme.color }}">
    <meta name="theme-color" content="{{ metadata.theme.color }}">

    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link rel="dns-prefetch" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital,wght@0,400;0,600;1,400;1,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    {% if isHighlight %}
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    {% endif %}
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <a class="skip-to-content-link" href="#main">
      Skip to content
    </a>
    {{ content | safe }}
  </body>
</html>
